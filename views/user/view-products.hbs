<section>

    <div class="container">
        <div class="row ">
            {{#each products}}
            <div class="col-md-3 mt-4">
                <div class="card" style="width: 16rem;">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="height: 12rem;">
                    <div class="card-body">
                        <h5 class="card-title "><b>{{this.Name}}</b></h5>
                        <p class="card-text mb-2 text-muted">{{this.Description}}</p>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div class="price text-success">
                                <h4 class="mt-4 ">â‚¹{{this.Price}}</h4>
                            </div>
                            <a href="#" class="btn btn-danger mt-3"><i class="fas fa-shopping-cart"></i> Add to
                                Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>