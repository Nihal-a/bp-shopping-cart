<section>
  <div class="container">
    <div class="row mt-4">

      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>

      <table class="table mt-4">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
            <td>{{this.Price}}</td>
            <td><img src="/product-images/{{this._id}}.jpg" alt="image" style="height: 50px;width: 50px;"></td>
            <td> 
              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
               onclick="return confirm('Do  you want to delete {{this.Name}}?')">Delete</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>